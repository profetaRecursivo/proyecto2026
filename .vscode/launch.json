//HERRAMIENTAS PARA DEBUGUEAR
{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Depurar",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}", // Ejecutable generado
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}", // Directorio del archivo
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar impresi√≥n de formatos para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "Compilar" // Vinculado al task.json
        }
    ]
}