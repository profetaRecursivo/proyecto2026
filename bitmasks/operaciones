n         = 01011000
n-1       = 01010111
--------------------
n & (n-1) = 01010000



n         = 01011000
n-1       = 01010111
--------------------
n | (n-1) = 01011111



n         = 01011000
n-1       = 01010111
--------------------
n ^ (n-1) = 00001111



n         = 01011000
--------------------
~n        = 10100111